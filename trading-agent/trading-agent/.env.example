# ===========================================
# TRADING AGENT AI - Configuration Template
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env file with real API keys!

# ============ EXCHANGE SELECTION ============
# Choose which exchange to use: "hyperliquid" or "alpaca"
# - alpaca: Free paper trading, stocks + crypto (recommended for testing)
# - hyperliquid: DEX perpetual futures (requires wallet/funds)
EXCHANGE=alpaca

# ============ EXCHANGE - ALPACA ============
# Get your API keys from https://alpaca.markets (free account)
# Go to Paper Trading > API Keys to get paper trading credentials
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_PAPER_TRADING=true
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ============ EXCHANGE - HYPERLIQUID ============
# Get your API keys from https://app.hyperliquid.xyz/
# Only needed if EXCHANGE=hyperliquid
HYPERLIQUID_API_KEY=your_hyperliquid_api_key
HYPERLIQUID_SECRET=your_hyperliquid_secret
HYPERLIQUID_TESTNET=true

# ============ TRADING PARAMETERS ============
TARGET_SYMBOLS=BTC,ETH,SOL
TIMEFRAME=15m
MAX_LEVERAGE=10
DEFAULT_LEVERAGE=3
MAX_POSITION_SIZE_PCT=5.0
MAX_TOTAL_EXPOSURE_PCT=30.0

# ============ LLM - DEEPSEEK ============
# Get your API key from https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com
MODEL_NAME=deepseek-chat
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# ============ LLM - DEEPSEEK NEWS ANALYZER ============
# Separate API key for news analysis (keeps costs isolated)
# Uses DeepSeek to analyze full article content and calculate sentiment
DEEPSEEK_NEWS_API_KEY=your_deepseek_news_api_key

# ============ DATABASE ============
# PostgreSQL connection URL (legacy - for SQLAlchemy migrations)
# Free options: Supabase, Neon.tech, Railway
DATABASE_URL=postgresql://user:password@localhost:5432/trading_agent

# ============ SUPABASE ============
# Primary database for trading_settings table
# Get your credentials from https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# ============ EXTERNAL APIs ============
# CoinMarketCap - Get free key from https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
NEWS_FEED_URL=https://cointelegraph.com/rss
WHALE_ALERT_API_KEY=optional_whale_alert_key

# ============ PAPER TRADING MODE ============
# Set to true to test with virtual money (recommended for testing!)
# Uses real market data but simulates order execution
PAPER_TRADING=true
# Starting balance for paper trading in USDC
PAPER_TRADING_INITIAL_BALANCE=10000.0

# ============ RISK MANAGEMENT ============
ENABLE_STOP_LOSS=true
ENABLE_TAKE_PROFIT=true
STOP_LOSS_PCT=3.0
TAKE_PROFIT_PCT=5.0
MIN_CONFIDENCE_THRESHOLD=0.6

# ============ LOGGING ============
LOG_LEVEL=INFO
LOG_FILE=logs/trading_agent.log

# ============ DASHBOARD ============
DASHBOARD_PORT=8501
DASHBOARD_HOST=0.0.0.0
